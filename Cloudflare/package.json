{
  "name": "bilvefethet-api",
  "version": "1.0.0",
  "description": "BilVeFethet Game Backend API",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create bilvefethet-db",
    "db:migrate": "wrangler d1 execute bilvefethet-db --file=./schema.sql",
    "db:migrate:local": "wrangler d1 execute bilvefethet-db --local --file=./schema.sql",
    "tail": "wrangler tail"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "jose": "^5.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "typescript": "^5.3.3",
    "wrangler": "^3.24.0"
  }
}
